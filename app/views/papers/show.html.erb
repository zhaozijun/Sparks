<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @paper.title %>
</p>

<p>
  <b>Author:</b>
  <%= @paper.author.name %>
</p>

<p>
  <b>File:</b>
  <%= @paper.file %>
	<%= link_to 'Download Paper', @paper.file_url%>
</p>

<p>
  <b>Demo:</b>
  <%= @paper.demo %>
	<%= link_to 'Download Demo', @paper.demo_url%>
</p>



<%= link_to 'Edit', edit_author_paper_path(current_author, @paper) %> |
<%= link_to 'Back', author_papers_path(current_author) %><br />
<%= link_to 'Question', paper_questions_path(@paper)%>

<table>
  <tr>
		<th>No.</th>
		<th>Tag</th>
    <th>Content</th>
    <th>Anwsertext</th>
    <th>Paper</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each_with_index do |question, index| %>
  <tr>
    <td><%= index + 1 %></td>
		<td><%= question.tag %></td>
    <td><%= question.content %></td>
    <td><%= question.anwsertext %></td>
    <td><%= link_to 'Show', paper_question_path(@paper, question) %></td>
    <td><%= link_to 'Edit', edit_paper_question_path(@paper, question) %></td>
    <td><%= link_to 'Destroy', [@paper, question], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

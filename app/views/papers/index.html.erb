<h1>Listing papers</h1>

<table class="center table table-striped">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @papers.each do |paper| %>
  <tr>
    <td><%= paper.title %></td>
    <td><%= paper.author.name %></td>
    <td><%= link_to 'Show', author_paper_path(current_author, paper), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_author_paper_path(current_author, paper), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', author_paper_path(current_author, paper), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Paper', new_author_paper_path(current_author), :class => 'btn btn-primary' %>
